# ================================================
# 7 ENSEMBLE - APPLICATION CONFIGURATION
# ================================================

# Application Configuration
APP_NAME="7 Ensemble"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_LOCALE=fr
APP_TIMEZONE=Europe/Zurich

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=7ensemble_db
DB_USERNAME=root
DB_PASSWORD=

# Cache & Session Configuration
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Redis Configuration (Optional - for advanced caching)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@7ensemble.ch"
MAIL_FROM_NAME="${APP_NAME}"

# Production Mail Settings (Uncomment for production)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

# ================================================
# PAYMENT GATEWAY CONFIGURATION
# ================================================

# Stripe Configuration
STRIPE_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_MODE=sandbox
PAYPAL_SANDBOX_CLIENT_ID=your_paypal_sandbox_client_id
PAYPAL_SANDBOX_CLIENT_SECRET=your_paypal_sandbox_secret
PAYPAL_LIVE_CLIENT_ID=your_paypal_live_client_id
PAYPAL_LIVE_CLIENT_SECRET=your_paypal_live_secret

# Cryptocurrency Configuration (Optional)
CRYPTO_WALLET_ADDRESS=your_crypto_wallet_address
CRYPTO_API_KEY=your_crypto_api_key

# Mobile Money Configuration (for African markets)
MOBILE_MONEY_API_KEY=your_mobile_money_api_key
MOBILE_MONEY_API_SECRET=your_mobile_money_secret

# ================================================
# 7 ENSEMBLE SPECIFIC CONFIGURATION
# ================================================

# Constellation Settings
CONSTELLATION_TRIANGULUM_SIZE=3
CONSTELLATION_PLEIADES_SIZE=7
INITIAL_PAYMENT_AMOUNT=21.00
ADMIN_FEE_PERCENTAGE=5.00

# Tour Configuration
TOUR_COUNT=7
TOUR_AUTO_PROGRESSION=true
CONSTELLATION_AUTO_ASSIGNMENT=true

# Referral System
REFERRAL_BONUS_ENABLED=true
REFERRAL_BONUS_AMOUNT=10.00
REFERRAL_BONUS_PERCENTAGE=5.00

# System Limits
MAX_PENDING_PAYMENTS=3
PAYMENT_TIMEOUT_HOURS=48
CONSTELLATION_FILL_NOTIFICATION=true

# ================================================
# ADMIN PANEL CONFIGURATION (FILAMENT)
# ================================================

FILAMENT_PATH=admin
FILAMENT_DOMAIN=null

# ================================================
# AWS S3 CONFIGURATION (for file uploads)
# ================================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ================================================
# THIRD-PARTY SERVICES
# ================================================

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Facebook Pixel (Optional)
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Sentry Error Tracking (Optional)
SENTRY_LARAVEL_DSN=your_sentry_dsn

# ================================================
# DEVELOPMENT & DEBUGGING
# ================================================

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Telescope (Laravel Debugging Tool - Development Only)
TELESCOPE_ENABLED=false

# Debugbar (Development Only)
DEBUGBAR_ENABLED=false

# ================================================
# SECURITY SETTINGS
# ================================================

# Two-Factor Authentication
TWO_FACTOR_ENABLED=false

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRY=60

# Account Verification
EMAIL_VERIFICATION_REQUIRED=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
